---
import type { Language } from '../constants/site';
import { t } from '../utils/i18n';
import cvData from '../data/cv-data.json';

export interface Props {
  lang: Language;
}

const { lang } = Astro.props;
---

<section id="skills" class="py-20">
  <div class="container mx-auto">
    <div class="max-w-5xl mx-auto">
      <!-- Section Title -->
      <h2
        class="text-4xl md:text-5xl font-black mb-12 text-center uppercase"
      >
        {t('skills.title', lang)}
      </h2>

      <div class="grid md:grid-cols-3 gap-8">
        <!-- Languages -->
        <div class="card-brutal p-6">
          <h3
            class="text-2xl font-black mb-6 uppercase border-b-brutal pb-3 text-primary"
          >
            {t('skills.languages', lang)}
          </h3>
          <div class="space-y-3">
            {
              cvData.skills.languages.map((lang) => (
                <div class="flex items-center gap-3">
                  <div class="w-3 h-3 bg-primary border-brutal-thin" />
                  <span class="font-bold text-lg">
                    {typeof lang.name === 'string' ? lang.name : lang.name[lang]}
                  </span>
                </div>
              ))
            }
          </div>
        </div>

        <!-- Frameworks -->
        <div class="card-brutal p-6">
          <h3
            class="text-2xl font-black mb-6 uppercase border-b-brutal pb-3 text-secondary"
          >
            {t('skills.frameworks', lang)}
          </h3>
          <div class="flex flex-wrap gap-2">
            {
              cvData.skills.frameworks.map((framework) => (
                <span class="px-3 py-2 bg-gradient-brutal text-white text-sm font-bold uppercase border-brutal-thin">
                  {framework}
                </span>
              ))
            }
          </div>
        </div>

        <!-- Tools -->
        <div class="card-brutal p-6">
          <h3
            class="text-2xl font-black mb-6 uppercase border-b-brutal pb-3"
            style="color: var(--color-primary);"
          >
            {t('skills.tools', lang)}
          </h3>
          <div class="flex flex-wrap gap-2">
            {
              cvData.skills.tools.map((tool) => (
                <span class="px-3 py-2 bg-surface-light dark:bg-surface-dark text-sm font-bold uppercase border-brutal-thin">
                  {typeof tool === 'string' ? tool : tool.name[lang]}
                </span>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
