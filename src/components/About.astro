---
import type { Language } from '../constants/site';
import { t } from '../utils/i18n';
import cvData from '../data/cv-data.json';

export interface Props {
  lang: Language;
}

const { lang } = Astro.props;
---

<section id="about" class="py-20">
  <div class="container mx-auto">
    <div class="max-w-4xl mx-auto">
      <!-- Section Title -->
      <h2
        class="text-4xl md:text-5xl font-black mb-12 text-center uppercase"
      >
        {t('about.title', lang)}
      </h2>

      <!-- About Card -->
      <div class="card-brutal p-8 md:p-12">
        <p class="text-lg md:text-xl leading-relaxed text-justify">
          {cvData.about[lang]}
        </p>
      </div>

      <!-- Education Section -->
      <div class="mt-12">
        <h3
          class="text-2xl md:text-3xl font-black mb-6 uppercase border-b-brutal pb-2"
        >
          {t('education.title', lang)}
        </h3>

        <div class="grid md:grid-cols-2 gap-6">
          {
            cvData.education.map((edu) => (
              <div class="card-brutal p-6">
                <div class="flex justify-between items-start mb-3">
                  <h4 class="text-xl font-bold">{edu.degree[lang]}</h4>
                  <span class="btn-brutal-primary px-3 py-1 text-sm">
                    {edu.year}
                  </span>
                </div>
                <p class="text-muted-light dark:text-muted-dark font-semibold">
                  {typeof edu.institution === 'string'
                    ? edu.institution
                    : edu.institution[lang]}
                </p>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
