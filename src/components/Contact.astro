---
import type { Language } from '../constants/site';
import { t } from '../utils/i18n';
import { CONTACT_INFO, SOCIAL_LINKS, REFERENCES } from '../constants/social';

export interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const cvFileName = lang === 'es' ? 'CV-Hernando-Nunez-ES.pdf' : 'CV-Hernando-Nunez-EN.pdf';
---

<section id="contact" class="py-20">
  <div class="container mx-auto">
    <div class="max-w-5xl mx-auto">
      <!-- Section Title -->
      <h2
        class="text-4xl md:text-5xl font-black mb-6 text-center uppercase"
      >
        {t('contact.title', lang)}
      </h2>

      <p
        class="text-xl text-center text-muted-light dark:text-muted-dark mb-12"
      >
        {t('contact.description', lang)}
      </p>

      <div class="grid md:grid-cols-2 gap-8">
        <!-- Contact Form -->
        <div class="card-brutal p-8">
          <form class="space-y-6">
            <div>
              <label
                for="name"
                class="block text-sm font-bold uppercase mb-2"
              >
                {t('contact.form.name', lang)}
              </label>
              <input
                type="text"
                id="name"
                name="name"
                class="w-full"
                required
              />
            </div>

            <div>
              <label
                for="email"
                class="block text-sm font-bold uppercase mb-2"
              >
                {t('contact.form.email', lang)}
              </label>
              <input
                type="email"
                id="email"
                name="email"
                class="w-full"
                required
              />
            </div>

            <div>
              <label
                for="message"
                class="block text-sm font-bold uppercase mb-2"
              >
                {t('contact.form.message', lang)}
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                class="w-full"
                required></textarea>
            </div>

            <button
              type="submit"
              class="btn-brutal-primary w-full"
              disabled
            >
              {t('contact.form.send', lang)}
            </button>

            <p class="text-sm text-center text-muted-light dark:text-muted-dark italic">
              {t('contact.form.note', lang)}
            </p>
          </form>
        </div>

        <!-- Contact Information -->
        <div class="space-y-6">
          <!-- Download CV -->
          <div class="card-brutal p-6">
            <h3 class="text-xl font-black uppercase mb-4">
              {t('hero.cta.cv', lang)}
            </h3>
            <a
              href={`/cv/${cvFileName}`}
              download
              class="btn-brutal-primary w-full block text-center"
            >
              {t('hero.cta.cv', lang)}
            </a>
          </div>

          <!-- Contact Details -->
          <div class="card-brutal p-6">
            <h3 class="text-xl font-black uppercase mb-4">
              {t('contact.title', lang)}
            </h3>
            <div class="space-y-3">
              <div>
                <p class="text-sm font-bold uppercase text-muted-light dark:text-muted-dark">
                  Email
                </p>
                <a
                  href={SOCIAL_LINKS.email.url}
                  class="text-primary hover:underline font-semibold"
                >
                  {CONTACT_INFO.email}
                </a>
              </div>
              <div>
                <p class="text-sm font-bold uppercase text-muted-light dark:text-muted-dark">
                  {t('contact.location', lang)}
                </p>
                <p class="font-semibold">{CONTACT_INFO.location}</p>
              </div>
              <div>
                <p class="text-sm font-bold uppercase text-muted-light dark:text-muted-dark">
                  GitHub
                </p>
                <a
                  href={SOCIAL_LINKS.github.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-primary hover:underline font-semibold break-all"
                >
                  {SOCIAL_LINKS.github.url}
                </a>
              </div>
            </div>
          </div>

          <!-- References -->
          <div class="card-brutal p-6">
            <h3 class="text-xl font-black uppercase mb-4">
              {t('contact.references', lang)}
            </h3>
            <div class="space-y-3">
              {
                REFERENCES.map((ref) => (
                  <div class="border-brutal-thin p-3">
                    <p class="font-bold">{ref.name}</p>
                    <p class="text-sm text-muted-light dark:text-muted-dark">
                      {ref.phone}
                    </p>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
