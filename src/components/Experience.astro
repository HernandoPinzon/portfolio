---
import type { Language } from '../constants/site';
import { t } from '../utils/i18n';
import cvData from '../data/cv-data.json';

export interface Props {
  lang: Language;
}

const { lang } = Astro.props;
---

<section id="experience" class="py-20 bg-surface-light dark:bg-surface-dark">
  <div class="container mx-auto">
    <div class="max-w-4xl mx-auto">
      <!-- Section Title -->
      <h2
        class="text-4xl md:text-5xl font-black mb-12 text-center uppercase"
      >
        {t('experience.title', lang)}
      </h2>

      <!-- Experience Timeline -->
      <div class="space-y-8">
        {
          cvData.experience.map((exp, index) => (
            <div class="card-brutal p-8 relative">
              {/* Timeline indicator */}
              <div class="absolute -left-4 top-8 w-8 h-8 bg-primary border-brutal-thick" />

              {/* Period badge */}
              <div class="mb-4">
                <span class="inline-block bg-gradient-brutal text-white px-4 py-2 text-sm font-bold uppercase border-brutal">
                  {exp.period[lang]}
                </span>
              </div>

              {/* Role and Company */}
              <h3 class="text-2xl md:text-3xl font-black mb-2">
                {exp.role[lang]}
              </h3>
              <p class="text-xl font-bold text-primary mb-4">{exp.company}</p>

              {/* Description */}
              <p class="text-lg leading-relaxed text-muted-light dark:text-muted-dark">
                {exp.description[lang]}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
